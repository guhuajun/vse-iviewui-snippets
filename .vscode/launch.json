    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scrapy",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/iviewui-spider/env/bin/scrapy",
            "cwd": "${workspaceRoot}/iviewui-spider",
            "args": [
                "crawl",
                "SnippetSpider"
            ],
            "console": "integratedTerminal",
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ]
        }
    ]
}